<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="./style.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-blue-800">
  <nav class="bg-blue-900 flex justify-between items-center p-4 border-b-2 border-blue-950 shadow-xl">
      <div class="flex justify-start">
          <a class="text-white" href="#">
              <i class="fa-solid fa-user"></i>
          </a>
      </div>
      <div class="hidden lg:flex justify-center mr-32">
          <ul class="flex justify-between space-x-4">
              <li>
                  <a href="./index" class="text-white cursor-pointer">Home</a>
              </li>
              <li>
                  <a href="./jobs" class="text-white cursor-pointer">Jobs</a>
              </li>
              <li class="relative inline-block">
                  <!-- Hidden checkbox for toggling -->
                  <input type="checkbox" id="recruiterToggle" class="peer hidden" />
                  <label for="recruiterToggle" class="cursor-pointer px-4 text-white flex items-center">
                      Recruiter
                      <i class="fas fa-caret-down ml-2"></i>
                  </label>
                  <div
                      class="absolute left-0 bg-white text-black mt-1 py-2 w-28 rounded-md shadow-lg hidden peer-checked:block">
                      <a href="./login" class="block px-4 py-2 hover:bg-gray-200">Login</a>
                      <a href="./add-job" class="block px-4 py-2 hover:bg-gray-200">Add Job</a>
                  </div>
              </li>
          </ul>
      </div>
      <div class="hidden lg:flex justify-end">
          <form action="/search" class="flex items-center">
              <input id="search-box" type="search" name="q" placeholder="search"
                  class="px-2 py-1 rounded-l border border-gray-300">
              <button type="submit" class="px-2 py-1 bg-blue-500 text-white rounded-r">Search</button>
          </form>
      </div>
      <!-- Hamburger Menu for Mobile -->
      <div class="lg:hidden flex items-center">
          <button id="hamburger-btn" class="text-white focus:outline-none">
              <i class="fas fa-bars text-2xl"></i>
          </button>
      </div>
  </nav>
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden lg:hidden bg-blue-900">
      <ul class="flex flex-col items-start space-y-2 p-4">
          <li>
              <a href="./index" class="text-white cursor-pointer">Home</a>
          </li>
          <li>
              <a href="./jobs" class="text-white cursor-pointer">Jobs</a>
          </li>
          <li class="relative inline-block">
              <input type="checkbox" id="mobileRecruiterToggle" class="peer hidden" />
              <label for="mobileRecruiterToggle" class="cursor-pointer text-white flex items-center">
                  Recruiter
                  <i class="fas fa-caret-down ml-2"></i>
              </label>
              <div
                  class="bg-white text-black mt-1 py-2 w-28 rounded-md shadow-lg hidden peer-checked:block">
                  <a href="./login" class="block px-4 py-2 hover:bg-gray-200">Login</a>
                  <a href="./add-job" class="block px-4 py-2 hover:bg-gray-200">Add Job</a>
              </div>

          </li>
          <li>
              <form action="/search" class="flex items-center w-full">
                  <input id="search-box" type="search" name="q" placeholder="search"
                      class="px-2 py-1 w-full rounded border border-gray-300">
                  <button type="submit" class="mx-2 px-2 py-1 bg-blue-500 text-white rounded w-full">Search</button>
              </form>
          </li>
      </ul>
  </div>
  <div class="bg-gray-100 flex justify-center min-h-screen">
      <div class="bg-white p-8 rounded-md shadow-xl w-full max-w-2xl">
          <h1 class="text-2xl font-bold mb-6 text-center">Add Job</h1>
          <form action="/add-jobs" method="post">
              <div class="mb-4">
                  <label for="jobCategory" class="block text-gray-700 mb-2"></label>
                  <select required name="jobCategory" id="jobCategory"
                      class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600">
                      <option selected disabled>select job category</option>
                      <option value="Tech">Tech</option>
                      <option value="Non-Tech">Non-Tech</option>
                  </select>
              </div>

              <div class="mb-4">
                  <label for="jobDesignation" class="block text-gray-700 mb-2"></label>
                  <select required name="jobDesignation" id="jobDesignation"
                      class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600">
                      <option selected disabled>select job designation</option>
                      <option value="Tech">Tech</option>
                      <option value="Non-Tech">Non-Tech</option>
                  </select>
              </div>

              <div class="mb-4">
                  <label for="location" class="block text-gray-700 mb-2">Job Location</label>
                  <input type="text" id="location" name="location"
                      class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600"
                      required>
              </div>

              <div class="mb-4 flex items-center space-x-4">
                  <label for="companyName" class="whitespace-nowrap">Company Name</label>
                  <input type="text" id="companyName" name="companyName"
                      class="flex-grow px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600"
                      required>
              </div>

              <div class="mb-4 flex items-center space-x-4">
                  <label for="salary" class="whitespace-nowrap">Salary</label>
                  <input type="text" id="salary" name="salary"
                      class="flex-grow px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600"
                      required>
                  <label for="position" class="whitespace-nowrap">Total Positions</label>
                  <input type="text" id="position" name="position"
                      class="flex-grow px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600"
                      required>
              </div>

              <div class="mb-4">
                  <label for="skills" class="block text-gray-700 mb-2">Skills Required</label>
                  <select required multiple name="skills" id="skills"
                      class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600">
                      <option selected disabled>select skills required for this job</option>
                      <option value="React">React</option>
                      <option value="NodeJs">NodeJs</option>
                      <option value="Angular">Angular</option>
                      <option value="MongoDB">MongoDB</option>
                      <option value="SQL">SQL</option>
                      <option value="Express">Express</option>
                      <option value="Java">Java</option>
                      <option value="SpringBoot">SpringBoot</option>
                      <option value="C++">C++</option>
                      <option value="Data Structures & Algo">Data Structures & Algo</option>
                  </select>
              </div>

              <div class="mb-4 flex items-center">
                  <label for="applyBy" class="block text-gray-700 mb-2 mr-4">Apply By</label>
                  <input name="applyBy" type="date" id="applyBy"
                      class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600"
                      aria-label="Apply By">
              </div>

              <button
                  class="w-full mb-3 mt-2 bg-green-500 text-white py-2 px-4 rounded hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-700"
                  type="submit">
                  Submit
              </button>

          </form>
      </div>
  </div>
  <script>
    document.getElementById('hamburger-btn').onclick = () => {
        document.getElementById('mobile-menu').classList.toggle('hidden');
    }
</script>
    </body>
    </html>